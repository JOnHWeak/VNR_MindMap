{
  "name": "vnr-mindmap",
  "version": "1.0.0",
  "description": "Interactive mindmap for Vietnamese Communist Party History",
  "main": "index.html",
  "scripts": {
    "dev": "live-server --port=3000 --open=/intro.html",
    "start": "live-server --port=8080 --open=/index.html",
    "build": "npm run clean && npm run mkdirs && npm run copy-html && npm run minify",
    "clean": "rimraf dist",
    "mkdirs": "mkdirp dist/styles dist/js",
    "copy-html": "cpx '*.html' dist",
    "minify": "npm-run-all minify-css:* minify-js:*",
    "minify-css:main": "cleancss -o dist/styles/main.min.css styles/main.css styles/mindmap.css styles/animations.css",
    "minify-css:intro": "cleancss -o dist/styles/intro.min.css styles/intro.css",
    "minify-js:main": "uglifyjs js/data.js js/mindmap.js js/interactions.js js/animations.js js/main.js -c -m -o dist/js/app.min.js",
    "minify-js:intro": "uglifyjs js/intro.js -c -m -o dist/js/intro.min.js",
    "serve": "http-server -p 3000 -o",
    "test": "echo 'No tests specified'",
    "lint": "eslint js/*.js",
    "format": "prettier --write *.html js/*.js styles/*.css"
  },
  "keywords": [
    "mindmap",
    "vietnamese-history",
    "communist-party",
    "interactive",
    "d3js",
    "education"
  ],
  "author": "VNR Mindmap Team",
  "license": "MIT",
  "devDependencies": {
    "live-server": "^1.2.2",
    "http-server": "^14.1.1",
    "clean-css-cli": "^5.6.2",
    "uglify-js": "^3.17.4",
    "eslint": "^8.50.0",
    "prettier": "^3.0.3",
    "cpx": "^1.5.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.5",
    "mkdirp": "^3.0.1"
  },
  "dependencies": {},
  "repository": {
    "type": "git",
    "url": "https://github.com/vnr-team/mindmap.git"
  },
  "bugs": {
    "url": "https://github.com/vnr-team/mindmap/issues"
  },
  "homepage": "https://vnr-team.github.io/mindmap"
}
